<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.nikol412.medicalcenter.fragment.resultAnalysis.ResultAnalysisViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.resultAnalysis.ResultAnalysisFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Результаты анализов"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_result"
            android:textSize="18sp"
            tools:text="Кровь хорошая"
            android:text="@{ vm.resultOfAnalysis }"
            android:layout_marginHorizontal="10dp" />

    </LinearLayout>
</layout>