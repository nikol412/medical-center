<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicalCenter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_green</item>
        <item name="colorPrimaryVariant">@color/background_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_green</item>
        <item name="colorSecondaryVariant">@color/button_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
<!--        <item name="android:background">@color/background_green</item>-->
        <item name="materialButtonStyle">@style/Widget.MedicalCenter.Button</item>
        <item name="android:editTextStyle">@style/Widget.MedicalCenter.EditText</item>

        <!-- Background Color -->
<!--        <item name="android:background">@color/background_green</item>-->

<!--        <item name="android:textViewStyle">@style/Text</item>-->

<!--        <item name="toolbarStyle">@style/Toolbar_Custom</item>-->


    </style>


    <style name="Widget.MedicalCenter.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_green</item>
    </style>

    <style name="Widget.MedicalCenter.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor_white</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/round_background_white</item>
    </style>

    <style name="Toolbar_Custom" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/text_title</item>
    </style>
    <style name="text_title" parent="Widget.AppCompat.TextView">
        <item name="background">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>